<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diary.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_writing_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dairy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.example.diary.app.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.diary.app.AddDataActivity"
            android:label="@string/title_activity_add_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.diary.app.UpdateActivity" />
        <activity android:name="com.example.diary.app.DiaryActivity" />
        <activity android:name="com.example.diary.app.RegisterActivity" />
    </application>

</manifest>